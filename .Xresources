!! Scroll behaviour
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
URxvt.scrollBar: false

!! Cursor
URxvt.cursorBlink: true
URxvt.cursorUnderline: true

!! Fonts
URxvt.font: xft:Ubuntu Mono:style=Regular:facesize=12:antialias=true:size=12
URxvt.boldFont: xft:Ubuntu Mono:style=Bold:facesize=12:antialias=true:size=12
URxvt.italicFont: xft:Ubuntu Mono:style=Italic:facesize=12:antialias=true:size=12
URxvt.boldItalicFont: xft:Ubuntu Mono:style=Bold Italic:facesize=12:antialias=true:size=12
URxvt.letterSpace: 0

!! Extensions
URxvt.perl-ext-common: font-size
! font-size keybinds
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
! URxvt.keysym.C-slash:  font-size:show

!! Colors
URxvt*depth: 32
URxvt.background: #1c1c1c
URxvt.foreground: #ffffff
URxvt.cursorColor: #ffffff

*background: #002b36
*foreground: #657b83
!!*fading: 40
*fadeColor: #002b36
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

! blue dark/light
! defaults are too dark on background
*color4: #268bd2
*color12: #53b1ef
